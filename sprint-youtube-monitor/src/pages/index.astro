---
import Layout from '../layouts/Layout.astro';
import ClockDisplay from '../components/ClockDisplay.astro';
import PomodoroTimer from '../components/PomodoroTimer.astro';

const pageTitle = 'Sprint YouTube Monitor';
---

<Layout>
	<main class="relative flex h-[1080px] w-[1920px] items-stretch justify-center px-6 pt-48 pb-16">
		<ClockDisplay />
		<section class="flex w-full items-start justify-between gap-12">
			<div class="flex flex-1 flex-col items-start justify-center gap-6 text-left">
				<h1 class="text-3xl font-semibold text-white sm:text-4xl">{pageTitle}</h1>
				<p class="max-w-xl text-sm text-slate-200 sm:text-base">
					YouTubeオンライン作業部屋 もくもくスプリント配信用画面
				</p>
			</div>
			<aside class="ml-auto flex w-[420px] flex-col items-center justify-start">
				<PomodoroTimer />
			</aside>
		</section>
	</main>
</Layout>
